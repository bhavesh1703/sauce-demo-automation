<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="ParallelSuite" parallel="methods" thread-count="2">
    
    <listeners>
        <listener class-name="listeners.TestListener"></listener>
    </listeners>

    <test name="LoginAndProductTests">
        <groups>
            <run>
                <include name="smoke"/>
<!--                <include name="regression"/>-->
            </run>
        </groups>
        <classes>
            <class name="tests.LoginTest"></class>
            <class name="tests.ProductsPageTest"></class>
        </classes>
    </test>
</suite>